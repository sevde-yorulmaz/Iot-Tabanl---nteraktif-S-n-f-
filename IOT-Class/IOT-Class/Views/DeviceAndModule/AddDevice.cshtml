@using IOT_Class.ViewModel;
@model AddDevices
@{
    ViewData["Title"] = "AddDevice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a asp-controller="DeviceAndModule" asp-action="Index">Cihaz</a></li>
                                <li class="breadcrumb-item"><a asp-controller="DeviceAndModule" asp-action="AddDevice">Ekle</a></li>
                                <li class="breadcrumb-item active">Form </li>
                            </ol>
                        </div>
                        <h4 class="page-title">Yeni Cihaz Ekle Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Cihaz Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="DeviceAndModule" asp-action="AddDevice" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label asp-for="@Model.deviceName">Cihaz Adı<span class="text-danger" asp-validation-for="@Model.deviceName">*</span></label>
                                            <input asp-for="@Model.deviceName" type="text" name="deviceName" parsley-trigger="change" required placeholder="Cihaz Adı" class="form-control" id="deviceName">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="@Model.description">Cihaz Açıklaması<span class="text-danger" asp-validation-for="@Model.description">*</span></label>
                                            <textarea asp-for="@Model.description" id="description" name="description" placeholder="Cihaz Açıklaması" rows="3" required class="form-control"></textarea>
                                        </div>
                                        

                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Yeni Cihaz Ekle
                                            </button>

                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


