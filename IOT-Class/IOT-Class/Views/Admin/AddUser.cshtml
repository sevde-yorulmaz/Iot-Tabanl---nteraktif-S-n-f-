@using IOT_Class.ViewModel;
@model UserAddViewModel
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Yeni</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="GetUserList">Kullanıcı</a></li>
                                <li class="breadcrumb-item active"><a asp-controller="Admin" asp-action="AddUser"></a>Ekle</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Yeni Kullanıcı Ekle Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Kullanıcı Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="Admin" asp-action="AddUser" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label asp-for="@Model.nameSurname">Ad Soyad<span class="text-danger" asp-validation-for="@Model.nameSurname">*</span></label>
                                            <input asp-for="@Model.nameSurname" type="text" name="nameSurname" parsley-trigger="change" required placeholder="Adı Soyad" class="form-control" id="nameSurname">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.mail">Mail Adresi<span class="text-danger" asp-validation-for="@Model.mail">*</span></label>
                                            <input asp-for="@Model.mail" type="email" name="mail" parsley-trigger="change" required placeholder="Mail Adresi" class="form-control" id="mail">
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.username">Kullanıcı Adı<span class="text-danger" asp-validation-for="@Model.username">*</span></label>
                                            <input asp-for="@Model.username" type="text" name="username" parsley-trigger="change" required placeholder="Kullanıcı Adı" class="form-control" id="username">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.phone">Telefon Numarası<span class="text-danger" asp-validation-for="@Model.phone">*</span></label>
                                            <input asp-for="@Model.phone" type="text" name="phone" parsley-trigger="change" required placeholder="Telefon Numarası" class="form-control" id="phone">
                                        </div>                                       
                                        <div class="form-group">
                                            <span asp-validation-for="@Model.password" class="text-danger"></span>

                                            <input class="form-control" asp-for="@Model.password" type="password" id="password" placeholder="Geçici Şifre" required>
                                        </div>


                                        <div class="form-group account-btn text-center mt-2">
                                            <div class="col-12">
                                                <button class="btn width-md btn-bordered btn-danger waves-effect waves-light" type="submit">Yeni Kullanıcı Ekle</button>
                                            </div>
                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


