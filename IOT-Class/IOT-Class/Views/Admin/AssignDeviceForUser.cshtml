@using IOT_Class.ViewModel;
@model AssignDeviceViewModel
@{
    ViewData["Title"] = "AssignDeviceForUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Kullanıcıya Cihaz Atama</h1>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="GetUserList">Kullanıcı</a></li>
                                <li class="breadcrumb-item"><a asp-controller="DeviceAndModule" asp-action="Index">Cihaz</a></li>
                                <li class="breadcrumb-item active"><a asp-controller="Admin" asp-action="AssignDeviceForUser"></a>Ata</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Kullanıcıya Cihaz Atama Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Kullanıcıya Cihaz Atama</h4>

                                <div class="p-4">
                                    <form asp-controller="Admin" asp-action="AssignDeviceForUser" method="post" data-parsley-validate novalidate>
                                        <input asp-for="@Model.user.Id" type="hidden" value="@Model.user.Id" />
                                        <div class="form-group">
                                            <select asp-for="user.Device.Id">
                                                @foreach (var device in Model.devices)
                                                {
                                                    <option value="@device.Id">@device.DeviceName</option>

                                                }
                                            </select>
                                        </div>                                            
                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Cihaz Atama
                                            </button>
                                        </div>

                                    </form>
                                    <a asp-controller="Admin" asp-action="GetUserList">Kullanıcı Listesine Geri Dön</a>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


