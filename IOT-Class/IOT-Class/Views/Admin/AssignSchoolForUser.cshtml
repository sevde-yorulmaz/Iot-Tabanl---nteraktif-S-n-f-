@using IOT_Class.ViewModel;
@model AssignSchoolViewModel
@{
    ViewData["Title"] = "AssignSchoolForUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcıya Okul-Sınıf Atama</h1>

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="GetUserList">Kullanıcı</a></li>
                                <li class="breadcrumb-item"><a asp-controller="School" asp-action="Index">Okul</a></li>
                                <li class="breadcrumb-item active"><a asp-controller="Admin" asp-action="AssignSchoolForUser"></a>Ata</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Kullanıcıya Okul Ve Sınıf Atama Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Kullanıcıya Okul Atama</h4>

                                <div class="p-4">
                                    <form asp-controller="Admin" asp-action="AssignSchoolForUser" method="post" data-parsley-validate novalidate>
                                        <input asp-for="@Model.appUser.Id" type="hidden" value="@Model.appUser.Id" />
                                        <div class="form-group">
                                            <select asp-for="appUser.School.Id">
                                                @foreach (var school in Model.schools)
                                                {
                                                    <option value="@school.Id">@school.Name</option>

                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <select asp-for="appUser.Class.Id">
                                                @foreach (var classes in Model.classes)
                                                {
                                                    <option value="@classes.Id">@classes.ClassName</option>

                                                }
                                            </select>
                                        </div>


                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Okul-Sınıf Atama
                                            </button>
                                        </div>
                                        
                                    </form>
                                    <a asp-controller="Admin" asp-action="GetUserList">Kullanıcı Listesine Geri Dön</a>
                                   
                                </div>

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
