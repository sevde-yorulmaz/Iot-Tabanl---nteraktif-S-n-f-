@using IOT_Class.ViewModel;
@model SchoolViewModel
@{
    ViewData["Title"] = "AddSchool";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                <li class="breadcrumb-item active">Form Validation</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Yeni Okul Ekle Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Okul Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="School" asp-action="AddSchool" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label asp-for="@Model.name">Okul Adı<span class="text-danger" asp-validation-for="@Model.name">*</span></label>
                                            <input asp-for="@Model.name" type="text" name="name" parsley-trigger="change" required placeholder="Okul Adı" class="form-control" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.email">Mail Adresi<span class="text-danger" asp-validation-for="@Model.email">*</span></label>
                                            <input asp-for="@Model.email" type="email" name="email" parsley-trigger="change" required placeholder="Mail Adresi" class="form-control" id="email">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.address">Okul Adresi<span class="text-danger" asp-validation-for="@Model.address">*</span></label>
                                            <textarea asp-for="@Model.address" id="address" name="address" placeholder="Okul Adresi" rows="3" required class="form-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.phone">Telefon Numarası<span class="text-danger" asp-validation-for="@Model.phone">*</span></label>
                                            <input asp-for="@Model.phone" type="text" name="phone" parsley-trigger="change" required placeholder="Telefon Numarası" class="form-control" id="phone">
                                        </div>
                                        @*<div class="checkbox checkbox-pink">
                                            <input class="form-check-input" id="state" type="checkbox" value="true" data-parsley-multiple="groups" checked="">
                                            <label class="form-check-label" asp-for="@Model.state"> Durum </label>
                                        </div>*@

                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Yeni Okul Ekle
                                            </button>
                                            
                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
