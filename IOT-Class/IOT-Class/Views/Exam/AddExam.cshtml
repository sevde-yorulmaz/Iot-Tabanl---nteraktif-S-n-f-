@using IOT_Class.ViewModel;
@model AddExamViewModel
@{
    ViewData["Title"] = "AddExam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Müdür</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Okul</a></li>
                                <li class="breadcrumb-item active">Ekle</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Yeni Okul Ekle Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Exam Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="Exam" asp-action="AddExam" method="post" data-parsley-validate novalidate>
                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Yeni Sınav Ekle
                                            </button>

                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.examname">Sınav Adı<span class="text-danger" asp-validation-for="@Model.examname">*</span></label>
                                            <input asp-for="@Model.examname" type="text" name="examname" parsley-trigger="change" required placeholder="Sınav Adı" class="form-control" id="examname">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.AppUser.NameSurname">Hazırlayan Kişi<span class="text-danger" asp-validation-for="@Model.AppUser.NameSurname">*</span></label>
                                            <input asp-for="@Model.AppUser.NameSurname" type="text" name="NameSurname" parsley-trigger="change" required placeholder="Hazırlayan" class="form-control" id="NameSurname">
                                        </div>



                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


