@using IOT_Class.ViewModel;
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12"> 
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Rol Atama</h4>

                                <div class="p-4">
                                    <form method="post" asp-controller="AdminRole" asp-action="AssignRole">
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <div class="form-check">

                                                <input asp-for="@Model[i].RoleID" type="hidden">
                                                <input asp-for="@Model[i].Name" type="hidden">
                                                <input asp-for="@Model[i].Exists" class="form-check-input" type="checkbox">
                                                <label class="form-check-label" asp-for="@Model[i].Exists">@Model[i].Name</label>
                                            </div>
                                        }
                                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                                        Değişiklikleri Kaydet
                                    </button>
                                    </form>
                                    <a asp-controller="AdminRole" asp-action="UserRoleList" class="btn btn-outline-pink btn-rounded waves-light waves-effect width-md">Kullanıcı Rol Listesine Geri Dön</a>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



