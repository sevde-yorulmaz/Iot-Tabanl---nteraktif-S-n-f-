@using iot_Class.ViewModel;
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Müdür</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Okul</a></li>
                                <li class="breadcrumb-item active">Ekle</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Yeni Okul Ekle Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Görev Atama</h4>

                                <div class="p-4">
                                    <form asp-controller="AdminRole" asp-action="AssignRole" method="post" >
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <div class="form-check">
                                                <input asp-for="@Model[i].RoleId" type="hidden">
                                                <input asp-for="@Model[i].Name" type="hidden" >
                                                <input asp-for="@Model[i].Exists" type="checkbox" class="form-check-input">
                                                <label class="form-check-label" asp-for="@Model[i].Exists">@Model[i].Name</label>
                                            </div>


                                        }

                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Görev Ata
                                            </button>

                                        </div>

                                    </form>
                                    <a asp-controller="AdminRole" asp-action="UserRoleList" class="btn btn-primary waves-effect waves-light" type="submit">
                                       Görevler Listesine Dön
                                    </a>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>