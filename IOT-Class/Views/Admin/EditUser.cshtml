@using iot_Class.ViewModel;
@model EditUserViewModel 
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Kullanıcı</a></li>
                                <li class="breadcrumb-item active">Ekle</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Kullanıcı Düzenleme Formu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Kullanıcı Bilgilerini Düzenleme</h4>

                                <div class="p-4">
                                    <form asp-controller="Admin" asp-action="EditUser" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label asp-for="@Model.nameSurname">Ad Soyad<span class="text-danger" asp-validation-for="@Model.nameSurname">*</span></label>
                                            <input asp-for="@Model.nameSurname" type="text" name="nameSurname" parsley-trigger="change" required="" placeholder="Adı Soyad" class="form-control" id="nameSurname">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.userName">Kullanıcı Adı<span class="text-danger" asp-validation-for="@Model.userName">*</span></label>
                                            <input asp-for="@Model.userName" type="text" name="userName" parsley-trigger="change" required="" placeholder="Kullanıcı Adı" class="form-control" id="userName">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.email">Mail Adresi<span class="text-danger" asp-validation-for="@Model.email">*</span></label>
                                            <input asp-for="@Model.email" type="email" name="email" parsley-trigger="change" required="" placeholder="Mail Adresi" class="form-control" id="email">
                                        </div>


                                        <div class="form-group">
                                            <label asp-for="@Model.phone">Telefon Numarası<span class="text-danger" asp-validation-for="@Model.phone">*</span></label>
                                            <input asp-for="@Model.phone" type="text" name="phone" parsley-trigger="change" required="" placeholder="Telefon Numarası" class="form-control" id="phone">
                                        </div>
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="state" name="state" checked="">
                                            <label class="form-check-label" asp-for="@Model.state">Status</label>
                                        </div>

                                        <div class="form-group account-btn text-center mt-2">
                                            <div class="col-12">
                                                <button class="btn btn-outline-orange btn-rounded waves-light waves-effect width-md" type="submit">Bilgileri Kaydet</button>
                                            </div>
                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

